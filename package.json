{
	"name": "aathma",
	"version": "0.0.0",
	"description": "A simple UI/API/WS hybrid application for random commenting and upvoting",
	"repository": "https://github.com/sanmoh-hombal/aathma.git",
	"author": "Sanmoh Hombal <sanmoh.hombal@gmail.com>",
	"type": "commonjs",
	"scripts": {
		"client:dev": "vite",
		"client:build": "vite build",
		"client:start": "vite preview",
		"server:dev": "nodemon --watch server server/index.ts",
		"server:build": "ttsc --esModuleInterop --outDir dist server/index.ts",
		"server:start": "node dist/server/index.js",
		"dev": "concurrently \"yarn client:dev\" \"yarn server:dev\"",
		"build": "rimraf dist && yarn server:build && yarn client:build",
		"start": "concurrently \"yarn client:start\" \"yarn server:start\"",
		"prepare": "ts-patch install && husky install"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/node": "^18.7.6",
		"@typescript-eslint/eslint-plugin": ">=5.28.0",
		"@typescript-eslint/parser": ">=5.28.0",
		"commitizen": "^4.2.5",
		"concurrently": "^7.3.0",
		"cz-gitmoji": "^0.0.7",
		"eslint": ">=8.0.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"ts-node": "^10.9.1",
		"ts-patch": "^2.0.2",
		"ttypescript": "^1.5.13",
		"typescript": ">=4.4",
		"typescript-transform-paths": "^3.3.1",
		"vite": "^3.0.7"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,html}": "npx eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-gitmoji"
		}
	},
	"dependencies": {
		"@prisma/client": "^4.2.1",
		"axios": "^0.27.2",
		"body-parser": "^1.20.0",
		"cors": "^2.8.5",
		"express": "^4.18.1",
		"moment": "^2.29.4",
		"prisma": "^4.2.1"
	}
}
