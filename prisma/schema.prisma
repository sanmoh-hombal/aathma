generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @db.Uuid
  created   DateTime? @default(now())
  updated   DateTime? @default(now())
  firstName String
  lastName  String
  picture   String

  comments comment[]
}

model comment {
  id      String    @id @db.Uuid
  created DateTime? @default(now())
  updated DateTime? @default(now())
  userId  String    @db.Uuid
  content String

  user user @relation(fields: [userId], references: [id])
}
